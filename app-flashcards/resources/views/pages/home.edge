@component('components/layout', { title: 'Accueil' })
<h2 class="page-title">Liste des decks publi√©s</h2>
<div class="cards">
  @each((deck, index) in decks)
  <a href="{{ route('deck.show', {id: deck.id}) }}" class="deck-card">
    <h2 class="deck-card-title">{{deck.title}}</h2>
    <p class="deck-card-user">{{deck.user.username}}</p>
  </a>
  <form action="{{route('deck.destroy', {id: deck.id}) }}?_method=DELETE" method="POST" style="display: inline">
    {{ csrfField()}}
    <button type="submit" style="background: none; border: none; padding: 0; cursor: pointer;">
      DELETE
    </button>
  </form>
  @end

</div>

@endcomponent